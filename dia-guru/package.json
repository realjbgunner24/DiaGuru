{
  "name": "dia-guru",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --ignore-pattern supabase/functions/**",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "deno:lint": "deno lint --config supabase/functions/deno.json supabase/functions",
    "deno:check": "deno check --config supabase/functions/deno.json supabase/functions/schedule-capture/index.ts supabase/functions/calendar-list/index.ts supabase/functions/oauth-cb/index.ts supabase/functions/sync-captures/index.ts",
    "deno:test": "deno test --config supabase/functions/deno.json supabase/functions",
    "validate": "npm run lint && npm run typecheck && npm run test && npm run deno:lint && npm run deno:check && npm run deno:test",
    "dev": "expo start",
    "dev:lan": "expo start --lan", 
    "dev:offline": "expo start --offline"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
